<Window x:Class="LeTruongPhucWPF.Views.CustomerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeTruongPhucWPF.Views"
        mc:Ignorable="d"
        Title="Customer Dashboard" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="My Orders">
                <TextBlock Text="Order history will be displayed here" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="My Profile">
                <TextBlock Text="Profile information will be displayed here" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>