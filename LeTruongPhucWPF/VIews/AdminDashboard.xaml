                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Orders">
                <TextBlock Text="Orders management will be implemented here" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Employees">
                <TextBlock Text="Employees management will be implemented here" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Reports">
                <TextBlock Text="Reports will be implemented here" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
